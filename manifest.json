{
    "manifest_version": 2,
    "name": "Title and URL copy",
    "version": "1.0.0",
    "description": "Copy curent page title and URL (Копирует тайтл и ссылку на текущую страницу в буфер)",
    "browser_action": {
      "default_icon": "icon.png",
	    "default_title": "Copy!/Копировать",
	    "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["main.js"]
    },
    "permissions": [
      "activeTab", "tabs", "http://*/*", "https://*/*"
    ]
  } 