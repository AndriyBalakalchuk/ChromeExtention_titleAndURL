{
    "manifest_version": 2,
    "name": "Gdrive - getLink&Folder",
    "version": "1.0.0",
    "description": "Копировать URL и тайтл к ниму",
    "browser_action": {
      "default_icon": "icon.png",
	    "default_title": "Копировать",
	    "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["main.js"]
    },
    "permissions": [
      "activeTab", "tabs", "http://*/*", "https://*/*"
    ]
  } 